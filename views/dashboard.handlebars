<h1>Your Dashboard</h1>

<div class="post-list">
  {{#each posts as |post|}}
  <div class="post-card">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted on {{format_date post.createdAt}}</p>
    <a href="/edit/{{post.id}}" class="btn">Edit</a>
  </div>
  {{/each}}
</div>

<a href="/new" class="btn btn-primary">Create New Post</a>
